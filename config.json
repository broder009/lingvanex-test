{
    "common": {
      "output_directory": "datasets/",
      "default_n_jobs": 4
    },
    "steps": [
      {
        "type": "preprocess",
        "parameters": {
          "inputs": [
            "WikiMatrix.en-ru.en",
            "WikiMatrix.en-ru.ru"
          ],
          "outputs": [
            "en_preprocessed.en",
            "ru_preprocessed.ru"
          ],
          "preprocessors": [
            {
              "WhitespaceNormalizer": {}
            },
            {
              "CharacterPreprocessor": {},
              "module": "preprocessors"

            }
          ]
        }
      },
      {
        "type": "remove_duplicates",
        "parameters": {
          "inputs": [
            "en_preprocessed.en",
            "ru_preprocessed.ru"
          ],
          "outputs": [
            "en_no_duplicates.en",
            "ru_no_duplicates.ru"
          ],
          "compare": "all"
        }
      },
      {
        "type": "filter",
        "parameters": {
          "inputs": [
            "en_no_duplicates.en",
            "ru_no_duplicates.ru"
          ],
          "outputs": [
            "en_filtered.en",
            "ru_filtered.ru"
          ],
          "filters": [
            {
              "LengthRatioFilter": {
                "unit": "word",
                "threshold": 3
              }
            },
            {
              "LongWordFilter": {
                "threshold": 25
              }
            },
            {
              "EngInBctFilter": {},
              "module": "filters"
            },
            {
              "LanguageIDFilter": {
                "id_method": "cld2",
                "languages": [
                  "en",
                  "ru"
                ],
                "thresholds": [
                  0.5,
                  0.5
                ]
              }
            }
          ]
        }
      }
    ]
  }